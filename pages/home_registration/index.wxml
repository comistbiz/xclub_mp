<!--pages/home_registration/index.wxml-->
<view class="root">
  <van-cell-group inset>
    <van-cell title="协同跑步活动" label="备注：周六下午4点">
      <van-radio-group value="{{ radio }}" bind:change="onChange" direction="horizontal">
        <van-radio name="1">参加</van-radio>
        <van-radio name="2">不参加</van-radio>
      </van-radio-group>
    </van-cell>
  </van-cell-group>

  <van-cell-group inset>
    <van-cell title="手姐的粉红网左黑历史" label="备注：周六下午2点">
      <van-radio-group value="{{ radio }}" bind:change="onChange" direction="horizontal">
        <van-radio name="1">参加</van-radio>
        <van-radio name="2">不参加</van-radio>
      </van-radio-group>
    </van-cell>
  </van-cell-group>
  <view class="buttons">
    <van-button type="info" bind:tap="showDialog">
      提交
    </van-button>
  </view>
  <view>
    <van-dialog id="van-dialog" />
  </view>
</view>
<tabBar id="tabbar" active="0"></tabBar>/*active是你想显示标亮的导航按钮的下标*/